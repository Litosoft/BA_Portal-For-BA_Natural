<script type="text/javascript" src="/scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/SessionUpdater.js"></script>

@{
    ViewBag.Title = "Home Page";
}


<h1>Welcome to</h1>
<div align="center">

    <img src="~/Content/logotransparent.gif" />

</div>

<div align="center">

@if (ViewContext.HttpContext.User.IsInRole("Guest"))
{
    <h2>
        <strong>@Html.ActionLink("New Patient", "Create", "Subjects", new { }, null)</strong>
    </h2>



}

</div>





<script type="text/javascript">
    // initialize Session Updater on page
    SetupSessionUpdater('/Home/KeepSessionAlive');
    SessionUpdater.Setup('@Url.Action("KeepSessionAlive","Home")');
</script>

<script>

    function keepAliveFunc() {
        setTimeout("keepAlive()", 10000);
    };

    function keepAlive() {
        $.post("/Home/KeepAlive", null, function () { keepAliveFunc(); });
    };

    $(keepAliveFunc());
</script>

