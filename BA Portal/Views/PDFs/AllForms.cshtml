<h1>All Forms</h1> 
<br />

<h3>Personal Information:</h3><br />
@Html.ActionLink("Add new Personal Information Form", "CaptureIDandRedirectforPI", "Signatures", new { id = ViewBag.Id }, null) 
<br />(Forms will use the client's current personal information, but require that the practioner and the client re-sign the form again).


@{

    <table id="border02" class="table">
        <tr>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayName("Options")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.SearchTag == "Personal Information")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SearchTag)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Description)
                    </td>
                    <td>
                        <strong>@Html.ActionLink("View PDF", "ReadPDFfromDatabase", new { id = item.ID })</strong> |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }
        }
    </table>
}
