@model IEnumerable<BA_Portal.Models.InsuranceInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            <span>Patient Name</span>
        </th>

        <th>
            <span>Primary Insurer</span>
        </th>
        <th>
            <span>Insurance Holder</span>
        </th>
        <th>
            <span>Group #</span>
        </th>
        <th>
            <span>ID #</span>
        </th>
        <th>
            <span>Plan Name</span>
        </th>
        <th>
            <span style="color: lightgreen">GI</span>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PatientName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PrimaryInsurer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InsuranceHolder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlanName)
        </td>
        <td>
            <span style="color: lightgreen">@Html.DisplayFor(modelItem => item.GroupingID)</span>  
        </td>
        <td>
            @Html.ActionLink("Admin Edit", "AdminEdit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
